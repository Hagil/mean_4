<!DOCTYPE html>
<html lang="en">

<head>
    <title>MEAN demo</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="css/style.css">
    <link rel="icon" href="http://www.stream2watch.cc/images/categories/4/64x64/14616606297074.png">
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.6/angular.min.js"></script>
    <script src="js/frontend_app.js"></script>

</head>

<body ng-app="employees">
    <h1>MEAN4 demo</h1>

    <div ng-controller="data">
        <h4>{{message}}</h4>
        <h2>CREATE</h2>
        <form>
            <input type="text" placeholder="name" ng-model="input_name">
            <input type="text" placeholder="gender" ng-model="input_gender">
            <input type="text" placeholder="job" ng-model="input_job">
            <button class="btn btn-primary" ng-click="create()">create employee</button>
        </form>

        <h2>READ</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>_id</th>
                    <th>name</th>
                    <th>gender</th>
                    <th>job</th>
                    <th>important?</th>
                    <th>UPDATE</th>
                    <th>DELETE</th>
                </tr>
            </thead>
            <tbody ng-repeat="employee in employees">
          <tr ng-class="{'male': employee.gender == 'Male', 'female': employee.gender == 'Female'}">
              <td>{{employee._id}}</td>
              <td><input type="text" ng-model="employee.name"></td>
              <td><input type="text" ng-model="employee.gender"></td>
              <td><input type="text" ng-model="employee.job"></td>
              <td><span ng-if="employee.job == 'CEO'"><img src="images/check.png" alt=""></span></td>
              <td><button ng-click="update(employee)">update</button></td>
              <td><button ng-click="delete(employee)">delete</button></td>
          </tr>

            </tbody>
        </table>

    </div>







</body>

</html>